<h1>Listing books</h1>

<table cellpadding="10">
  <thead>
    <tr>
      <th>Purchased</th>
      <th>Accession</th>
      <th>Author</th>
      <th>Title</th>
      <th>Volume</th>
      <th>Publisher</th>
      <th>Year</th>
      <th>Pages</th>
      <th>Source</th>
      <th>Class Number</th>
      <th>Book Number</th>
      <th>Cost</th>
      <th>Bill Number</th>
      <th>Withdrawn</th>
      <th>Remarks</th>
      <th>Genre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.purchased %></td>
        <td><%= book.accession %></td>
        <td><%= book.author %></td>
        <td><%= book.title %></td>
        <td><%= book.volume %></td>
        <td><%= book.publisher %></td>
        <td><%= book.year %></td>
        <td><%= book.pages %></td>
        <td><%= book.source %></td>
        <td><%= book.class_number %></td>
        <td><%= book.book_number %></td>
        <td><%= book.cost %></td>
        <td><%= book.bill_number %></td>
        <td><%= book.withdrawn %></td>
        <td><%= book.remarks %></td>
        <td><%= book.genre.title %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<h3>
    <%= link_to 'New Book', new_book_path %><br><br>
    <%= link_to "Home", root_path %>
</h3>
